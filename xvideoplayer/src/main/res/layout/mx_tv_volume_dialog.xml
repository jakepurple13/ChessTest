<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/tv_volume_dialog_ll_width"
    android:layout_height="@dimen/tv_volume_dialog_ll_height"
    android:background="@drawable/mx_dialog_progress_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mx_volume_icon"
        android:layout_width="@dimen/tv_volume_dialog_iv_width"
        android:layout_height="@dimen/tv_volume_dialog_iv_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/mobile_volume_dialog_iv_marginBottom"
        android:layout_marginTop="@dimen/mobile_volume_dialog_iv_marginTop"
        android:contentDescription="@string/mx_img_content_dec"
        android:src="@drawable/mx_volume_icon" />

    <ProgressBar
        android:id="@+id/volume_progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mobile_dialog_progress_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/mobile_dialog_progress_marginBottom"
        android:layout_marginLeft="@dimen/mobile_dialog_progress_marginLeft"
        android:layout_marginRight="@dimen/mobile_dialog_progress_marginRight"
        android:layout_marginTop="@dimen/mobile_dialog_progress_marginTop"
        android:max="100"
        android:progressDrawable="@drawable/mx_dialog_progress" />
</LinearLayout>
