<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MaterialTheme.ActionBar"
    tools:context=".otherfun.CastingActivity">

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="false"
        android:text="Play" />

    <Button
        android:id="@+id/button_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_play"
        android:layout_gravity="center"
        android:enabled="false"
        android:text="Resume" />

    <com.crestron.aurora.views.ENPlayView
        android:id="@+id/play_pause_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <com.crestron.aurora.views.ENVolumeView
        android:id="@+id/volume_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <SeekBar
        android:id="@+id/time_bar"
        android:layout_below="@id/button_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time_bar_info"
        android:layout_above="@id/time_bar"
        android:layout_alignParentEnd="true"
        android:text="Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_above="@id/volume_view"
        android:id="@+id/cast_show_info"
        android:layout_marginTop="5dp"
        android:layout_below="@id/time_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Title"
            android:layout_toEndOf="@id/cast_image"
            android:id="@+id/cast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/cast_image"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_volume_low_grey600_36dp"
            android:layout_width="360px"
            android:layout_height="480px" />

        <ScrollView
            android:layout_toEndOf="@id/cast_image"
            android:layout_below="@id/cast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cast_des"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
        
    </RelativeLayout>

    <!--<SeekBar
        android:id="@+id/volume_bar"
        android:max="100"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <androidx.mediarouter.app.MediaRouteButton
        android:id="@+id/media_route_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/button_play" />

</RelativeLayout>