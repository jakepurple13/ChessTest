<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/yahtzee_layout"
    android:background="@drawable/drkgreen"
    tools:context=".boardgames.yahtzee.YahtzeeActivity">

    <Button
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@android:color/tertiary_text_dark"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:text="Roll" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice_layout"
        android:layout_toStartOf="@+id/roll_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_weight="1"
            android:src="@drawable/dice_images" />

        <ImageView
            android:id="@+id/second_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_weight="1"
            android:src="@drawable/dice_images" />

        <ImageView
            android:id="@+id/third_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_weight="1"
            android:src="@drawable/dice_images" />

        <ImageView
            android:id="@+id/fourth_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_weight="1"
            android:src="@drawable/dice_images" />

        <ImageView
            android:id="@+id/fifth_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_weight="1"
            android:src="@drawable/dice_images" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/one_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Ones: 0" />

        <Button
            android:id="@+id/two_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Twos: 0" />

        <Button
            android:id="@+id/three_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Threes: 0" />

        <Button
            android:id="@+id/four_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Fours: 0" />

        <Button
            android:id="@+id/five_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Fives: 0" />

        <Button
            android:id="@+id/six_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Sixes: 0" />

        <TextView
            android:id="@+id/small_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/six_score"
            android:text="Small Score: 0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/three_kind_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Three of a Kind: 0" />

        <Button
            android:id="@+id/four_kind_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Four of a Kind: 0" />

        <Button
            android:id="@+id/full_house_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Full House: 0" />

        <Button
            android:id="@+id/small_straight_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Small Straight: 0" />

        <Button
            android:id="@+id/large_straight_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Large Straight: 0" />

        <Button
            android:id="@+id/yahtzee_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Yahtzee: 0" />

        <Button
            android:id="@+id/chance_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:focusable="false"
            android:text="Chance: 0" />

        <TextView
            android:id="@+id/large_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Large Score: 0" />

    </LinearLayout>

    <TextView
        android:id="@+id/total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dice_layout"
        android:layout_alignParentEnd="true"
        android:text="Total Score: 0" />

    <Button
        android:id="@+id/default_button_yahtzee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Button" />

</RelativeLayout>