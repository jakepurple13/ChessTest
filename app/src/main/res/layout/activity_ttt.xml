<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boardgames.tictactoe.TTTActivity">

    <Button
        android:id="@+id/midMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Button" />

    <Button
        android:id="@+id/midLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/midMid"
        android:text="Button" />

    <Button
        android:id="@+id/midRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/midMid"
        android:text="Button" />

    <Button
        android:id="@+id/topLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/midMid"
        android:layout_toStartOf="@+id/midMid"
        android:text="Button" />

    <Button
        android:id="@+id/topMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/midMid"
        android:layout_centerHorizontal="true"
        android:text="Button" />

    <Button
        android:id="@+id/topRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/midMid"
        android:layout_toEndOf="@+id/midMid"
        android:text="Button" />

    <Button
        android:id="@+id/bottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midMid"
        android:layout_toStartOf="@+id/midMid"
        android:text="Button" />

    <Button
        android:id="@+id/bottomMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midMid"
        android:layout_centerHorizontal="true"
        android:text="Button" />

    <Button
        android:id="@+id/bottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midMid"
        android:layout_toEndOf="@+id/midMid"
        android:text="Button" />
</RelativeLayout>