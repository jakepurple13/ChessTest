<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/text_to_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/title_to_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:textColor="#fff"
        android:layout_toStartOf="@id/text_to_change"
        android:layout_above="@id/message_to_show"
        android:text="Time between Checks" />

    <TextView
        android:id="@+id/message_to_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/text_to_change"
        android:layout_toStartOf="@id/text_to_change"
        android:layout_alignParentStart="true"
        android:text="TextView" />
</RelativeLayout>