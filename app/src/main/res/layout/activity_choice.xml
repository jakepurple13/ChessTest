<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drkgreen"
    tools:context=".ChoiceActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/choice_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/grid_rotated">

            <!--<ImageView
                android:onClick="onHamburger"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_hamburger"
                android:tint="@android:color/white" />-->

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.box.shelfview.ShelfView
        android:id="@+id/shelfView"
        android:layout_below="@id/choice_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>