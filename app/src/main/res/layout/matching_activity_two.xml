<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/matching_layouts"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drkgreen"
    tools:context=".cardgames.matching.MatchingActivityTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/timer_info"
        android:gravity="center"
        android:clipChildren="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/matching_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            tools:itemCount="24"
            android:layout_gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/timer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

</RelativeLayout>